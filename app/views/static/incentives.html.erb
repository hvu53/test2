<%= content_for :head do %>
	<link href='https://fonts.googleapis.com/css?family=Istok+Web:400,700,400italic,700italic|Kreon:300,400,700'
    rel='stylesheet' type='text/css'>
	<style>
		.wrap-all {
			background: #000;
			padding: 0px !important;
		}	
		.incentives-container .row {
			padding-top: 20px;
			background: rgba(0,0,0,.3);
	    -moz-transition: all 1s;
	    -webkit-transition: all 1s;
	    transition: all 1s;
	    min-height: 1000px;
		}
		.overlay {
			height: 150px;	
			margin-bottom: -130px;	
			background-image: -webkit-gradient(
				linear,
				left top,
				left bottom,
				color-stop(0, #000000),
				color-stop(1, transparent)
			);
			background-image: -o-linear-gradient(bottom, #000000 0%, transparent 100%);
			background-image: -moz-linear-gradient(bottom, #000000 0%, transparent 100%);
			background-image: -webkit-linear-gradient(bottom, #000000 0%, transparent 100%);
			background-image: -ms-linear-gradient(bottom, #000000 0%, transparent 100%);
			background-image: linear-gradient(to bottom, #000000 0%, transparent 100%);
		}
	</style>
<% end -%>

<div class="container incentives-container">
	<div class="overlay"></div>
	<div class="row span12">
	<div class="incentives">
			<div class="text-center">
				<%= image_tag("misc/img_logo.png", :alt => "Holiday in a Jiff") %>
				<br>
				<%= image_tag("misc/img_fuegraphic.png", :alt => "Holiday in a Jiff", :width => "250") %>
				
				<br>
				<div class="divider"> </div>
				<h2 class="top-10 yellow-text"> Get the Jiff Incentives App </h2>

				<p> Be sure your are viewing the page on your iPhone </p>
				<br>
				<h3 class="top-10">Step 1</h3>

				<a href="http://i.jiff.com.s3.amazonaws.com/production/applications/incentives/Incentives.mobileprovision" class="top-10 btn btn-large btn-warning "> Install Profile </a>
				<br>
				<h3 class="top-20">Step 2</h3>

				<p class="top-20"> Download Incentives App</p>

				<%= image_tag("misc/img_incentivesappicon.png", :alt => "compete v1.0.0", :class=>"clearfix top-20", :width => "100px") %>

				<br/>
				<a href="itms-services://?action=download-manifest&url=http://i.jiff.com.s3.amazonaws.com/production/applications/incentives/Incentives.plist" class="btn btn-large btn-warning top-10"> Download App</a>

			</div>
		</div>
	</div>
</div>
